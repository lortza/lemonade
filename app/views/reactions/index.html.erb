<% content_for(:title, "Reactions Index") %>

<div class="container wrapper">

  <div class="pull-right">
    <%= link_to '+ New Reaction', new_reaction_path, class: "btn btn-primary btn-md" %> 
  </div> <!-- pull-right -->
  
  <p id="notice"><%= notice %></p>

  <h1>Reactions Index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Explanation</th>
        <th colspan="2">Manage</th>
      </tr>
    </thead>

    <tbody>
      <% @reactions.each do |reaction| %>
        <tr>
          <td><%= link_to reaction.name, reaction %><br> 
          <%= display_unpublished_indicator(reaction) %></td>
          <td><%= reaction.explanation %></td>
          <td><%= link_to ' ', edit_reaction_path(reaction), class: "fa fa-pencil" %></td>
          <td><%= link_to ' ', reaction, method: :delete, data: { confirm: "Whoa there! Are you sure you want to delete this reaction? Once it is gone, it's gone and this can't be undone. If you'd like to Unpublish it instead, click Cancel, then set the Publish Status to Unpublished." }, class: "fa fa-trash-o" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div> <!-- container wrapper -->

